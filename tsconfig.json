{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "dom"
    ],
    "types": [
      "react"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./types/index.d.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.gql",
    "**/*.graphql"
  ]
}
